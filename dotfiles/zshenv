# .zshenv is for all shells. Nothing here should produce any output.

export PERL5LIB=$PERL5LIB:~/src/git/perl
export PYTHONPATH=$PYTHONPATH:~/src/nltk/nltk

# Some important Unicode- and local-related settings:
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

if [[ `uname` = "Darwin" ]]; then
    # The brew-installed EC2 API scripts require these:
    export JAVA_HOME="/System/Library/Frameworks/JavaVM.framework/Home"
    export EC2_PRIVATE_KEY=$(ls $HOME/.ec2/pk-*.pem 2> /dev/null)
    export EC2_CERT=$(ls $HOME/.ec2/cert-*.pem 2> /dev/null)
    export EC2_HOME="/usr/local/Cellar/ec2-api-tools/1.3-57419/jars"
fi

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/lib:/usr/lib
export PKG_CONFIG_PATH=$PKG_CONFIG_PATH:/usr/local/lib/pkgconfig:/usr/lib/pkgconfig

export PATH=/usr/local/bin:/bin:/usr/bin:/sbin:/usr/sbin:/usr/local/sbin
[[ -e ~/src/bin ]] && export PATH=$PATH:~/src/bin
[[ -e ~/src/ckoenig/bin ]] && export PATH=$PATH:~/src/ckoenig/bin
[[ -e ~/src/git ]] && export PATH=$PATH:~/src/git
[[ -e ~/src/tig ]] && export PATH=$PATH:~/src/tig
# [[ -e ~/src/node ]] && export PATH=$PATH:~/src/node
# For the MacTex distribution on OSX:
[[ -e /usr/texbin ]] && export PATH=$PATH:/usr/texbin
# And for the brew-installed Ruby configuration:
[[ -e /usr/local/Cellar/ruby/1.9.2-p0/bin ]] && export PATH=$PATH:/usr/local/Cellar/ruby/1.9.2-p0/bin

if [[ -e "/cygdrive/c/Program Files (x86)/Microsoft Visual Studio 10.0/Common7/IDE" ]]; then
    export PATH=$PATH:/cygdrive/c/Program\ Files\ \(x86\)/Microsoft\ Visual\ Studio\ 10.0/Common7/IDE
fi

[[ -e ~/.keychain/`hostname`-sh ]] && source ~/.keychain/`hostname`-sh
# If we're on OS X, look for launchd's SSH authentication socket:
[[ `uname` = "Darwin" ]] && export SSH_AUTH_SOCK=$(ls /tmp/launch-*/Listeners)

# Git and gitweb environment variables:
export GIT_BINDIR=~/src/git/
export GIT_EXEC_PATH=~/src/git/
export GITPERLLIB=~/src/git/perl/blib/lib/

export NLTK_DATA=~/src/nltk/nltk_data/packages/

export EDITOR=vim
export SVN_EDITOR=vim
