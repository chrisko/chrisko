# .zshenv is for all shells. Nothing here should produce any output.

export FINELIBERTY=pathwith.greatamerica.corp.yahoo.com

# Augment perl @INC with DM libraries. (Adds a colon if $PERLLIB is already set.)
[[ -z "$PERLLIB" ]] || export PERLLIB=$PERLLIB:
export PERLLIB=$PERLLIB~/src/perl:~/src/git/perl
export PERLLIB=$PERLLIB:/home/y/lib/perl5/site_perl/5.8.6
export PERLLIB=$PERLLIB:/home/y/lib/perl5/site_perl/5.8
export PERLLIB=$PERLLIB:/home/y/lib/perl5/5.8
export PERLLIB=$PERLLIB:/home/y/lib/perl5/site_perl

export LD_LIBRARY_PATH=/usr/local/lib:/usr/lib
export PKG_CONFIG_PATH=/usr/local/lib/pkgconfig:/usr/lib/pkgconfig

[[ -e ~/src/bin ]] && export PATH=$PATH:~/src/bin
[[ -e ~/src/ckoenig/bin ]] && export PATH=$PATH:~/src/ckoenig/bin
[[ -e ~/src/git ]] && export PATH=$PATH:~/src/git
[[ -e ~/src/tig ]] && export PATH=$PATH:~/src/tig
[[ -e ~/src/R/bin ]] && export PATH=$PATH:~/src/R/bin
[[ -e /sw/bin ]] && export PATH=$PATH:/sw/bin

export CVSROOT=vault.yahoo.com:/CVSROOT
export CVS_RSH=/usr/bin/ssh

export SVNROOT=svn+ssh://svn.corp.yahoo.com/yahoo/ysm/affdm
export IGOR_PROPERTY=yellowstone

export R_HOME=~/src/R

export GIT_BINDIR=~/src/git/
export GIT_EXEC_PATH=~/src/git/
export GITPERLLIB=~/src/git/perl/blib/lib/
export GITWEB_CONFIG=~/.gitweb

export R_LIBS_USER=~/src/canvas/R:~/src/png/R

export EDITOR=vim
export SVN_EDITOR=vim

export ROOT=${ROOT:-/home/y}
[[ -e $ROOT ]] && export PATH=$ROOT/bin:$ROOT/sbin:$PATH

if [[ -e /sw/Applications/AquaTerm.app ]]; then
  export GNUTERM="aqua"
  export AQUATERM_PATH="/sw/Applications/AquaTerm.app"
fi

[[ -e /sw/bin/init.sh ]] && . /sw/bin/init.sh
